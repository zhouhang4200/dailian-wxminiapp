/* pages/waitOrderDetail/index.wxss */
@import "./_modal_password.wxss";

page {
    padding-bottom: 155rpx;
}

.head-info {
    padding: 30rpx;
    color: #333;
    line-height: 1.7;
}

.head-title {
    font-weight: bold;
    font-size: 40rpx;
}

.price-info {

}

.rmb-symbol {
    font-size: 36rpx;
    font-weight: bold;
    color: #ff6600;
}

.rmb-size {
    font-size: 58rpx;
    font-weight: bold;
    color: #ff6600;
}

.area {
    font-size: 24rpx;
    color: #666;
    /*padding-top: 26rpx;*/
}

.safe-price {
    padding: 0 30rpx;
    height: 74rpx;
    display: flex;
    align-items: center;
    color: #333;
    font-size: 24rpx;
    background-color: #f8f8f8;
}

.safe-price .price-row {
    display: flex;
}

.safe-price .size {
    color: #ff6600;
}

.order-info-wrap {
    padding: 0 30rpx;
}

.order-info {
    padding-top: 28rpx;
    display: flex;
    font-size: 24rpx;
}

.order-info .title {
    color: #333;
}

.order-info .value {
    flex: 1;
    color: #666;
}

.order-info .tag {
    width: 78rpx;
    height: 38rpx;
    background-color: #fff5ee;
    border-radius: 4rpx;
    display: flex;
    font-size: 24rpx;
    align-items: center;
    justify-content: center;
    border: solid 1rpx #ffd6bb;
}

.remark-item {
    padding: 58rpx 30rpx;
    padding-bottom: 0;
}

.remark-item .tag {
    padding-bottom: 22rpx;
}

.remark-item .tag-info {
    display: inline-block;
    height: 40rpx;
    color: #fff;
    font-size: 26rpx;
    padding: 8rpx;
    align-items: center;
    background-color: #333333;
}

.remark-item .details {
    padding-top: 10rpx;
    font-size: 24rpx;
    color: #666;
    line-height: 1.7;
}

.receive-footer {
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    justify-content: space-between;
    width: 100%;
    height: 87rpx;
    background-color: #fff;
}

.receive-title {
    margin-left: 30rpx;
    font-weight: bold;
    font-size: 26rpx;
    flex: 1;
    color: #333;
    display: flex;
    align-items: center;
}

.receive-title text {

}

.receive-title .size {
    font-weight: bold;
    font-size: 29rpx;
    color: #ff6600;
}

.submit-btn {
    width: 290rpx;
    display: flex;
    height: 100%;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    color: #fff;
    font-weight: bold;
    background-image: linear-gradient(-45deg, rgb(0, 156, 255) 0%, rgb(0, 134, 255) 100%);
}
