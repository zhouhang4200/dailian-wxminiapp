.modal-content .confirm-modal {
    height: 170rpx;
}

.modal-content .form-modal {
    padding: 0 30rpx;
}

.modal-content .modal-title {
    text-align: center;
    font-size: 33rpx;
    padding-top: 54rpx;
    padding-bottom: 35rpx;
    color: #000;
}

.modal-content .input-placeholder {
    color: #ccc;
}

.modal-content .forget-link {
    font-size: 26rpx;
    color: #999;
    text-align: right;
    padding-bottom: 16rpx;
}

.modal-content .password-wrap {
    position: relative;
    overflow: hidden;
    height: 76rpx;
}

.modal-content .password-input {
    position: relative;
    overflow: hidden;
    height: 76rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #ffffff;
    border-radius: 8rpx;
    border: 1rpx solid #d2d3d5;
    margin-bottom: 26rpx;
    font-size: 26rpx;
}

.modal-content .pay-password-input {
    width: 0;
    height: 0;
    color: transparent;
    font-size: 0;
    opacity: 0;
}

.modal-content .password-sigle-wrap {
    position: absolute;
    background-color: #fff;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    z-index: 2;
}

.modal-content .password-sigle {
    flex: 1;
    position: relative;
    align-items: center;
    justify-content: center;
    border-left: 1rpx solid #d2d3d5;
    font-weight: bold;
    color: #000;
    height: 100%;
}

.modal-content .password-sigle-show:after {
    content: '';
    position: absolute;
    width: 24rpx;
    height: 24rpx;
    border-radius: 12rpx;
    background-color: #000;
    transform: translate(-50%, -50%);
    left: 50%;
    top: 45%;
}
