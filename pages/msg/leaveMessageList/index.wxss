/* pages/msg/leaveMessageList/index.wxss */
page {
    background-color: #f8f8f8;
}

.leave-page {
    padding: 35rpx;
}

.leave-page .row-item {
    background-color: #ffff;
    border-radius: 14rpx;
    padding: 20rpx;
    padding-bottom: 0;
    margin-bottom: 20rpx;
}

.leave-page .row-head {
    display: flex;
    padding-bottom: 29rpx;
    justify-content: space-between;
}

.leave-page .row-head .title {
    font-size: 33rpx;
    color: #222;
}

.leave-page .row-head .date {
    font-size: 24rpx;
    color: #b3b3b3;
}

.leave-page .details-content {
    line-height: 1.8;
    font-size: 25rpx;
    color: #333;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #eee;
}

.leave-page .details-btn {
    border: 0;
    border-radius: 0;
    background-color: transparent;
    font-size: 25rpx;
    padding: 32rpx 0;
    text-align: center;
    color: #198cff;
}
