/* pages/msg/leaveMessageList/details/index.wxss */
page {
    background-color: #f8f8f8;
}
.page-scroll-view{
    padding-bottom: 120rpx;
}

.histime {
    text-align: center;
    font-size: 18rpx;
    display: block;
    color: #bbb;
    padding: 30rpx 0;
}

.msg-row {
    display: flex;
    align-items: flex-start;
    padding: 0 21rpx;
}

.right-row {
    flex-direction: row-reverse;
}

.user-icon {
    width: 74rpx;
    height: 74rpx;
    border-radius: 37rpx;
}

.msg-content {
    line-height: 1.8;
    max-width: 553rpx;
    padding: 14rpx 44rpx;
    font-size: 27rpx;
}

.right-row .msg-content {
    background-image: linear-gradient(90deg, #0086ff 0%, #009cff 100%), linear-gradient(#ffffff, #ffffff);
    background-blend-mode: normal, normal;
    border-radius: 36px 0px 36px 36px;
    color: #fff;
    margin-right: 17rpx;
}

.left-row .msg-content {
    margin-left: 17rpx;
    background-color: #ffffff;
    box-shadow: 0px 7px 13px 1px rgba(237, 242, 247, 0.6);
    border-radius: 0px 36px 36px 36px;
    color: #333;
}

.msg-form {
    position: fixed;
    left: 15rpx;
    bottom: 15rpx;
    box-shadow: 0px 7px 13px 1px rgba(237, 242, 247, 0.6);
    width: 722rpx;
    display: flex;
    align-items: center;
}

.msg-input {
    background-color: #ffffff;
    flex: 1;
    padding: 30rpx;
    font-size: 32rpx;
    border-radius: 14rpx;
}

.input-placeholder{
    color:#999;
}
.send-msg-btn{
    margin: 0;
    margin-left: 10rpx;
    width: 140rpx;
    font-size: 32rpx;
    padding: 26rpx 0;
    justify-content: center;
    align-items: center;
    line-height: normal;
    border-radius: 14rpx;
    text-align: center;
}
.disabled{
    background-color: #ccc;
}
