/* pages/home/index.wxss */
@import "goods.list.wxss";

.index-page {
  position: relative;
  height: 100%;
  box-sizing: border-box;
  width: 100%;
}

.page-top-fixed {
  padding-top: 160rpx;
}

/**
 modal
 */
.modal-overlay {
  top: 80rpx;
}

.head-top {
  position: relative;
  z-index: 102;
  background-color: #fff;
}

.head-top-fixed {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
}

/* 列表弹窗 */

.sort-modal-content {
  display: flex;
}

.sort-modal-content-container {
  position: fixed;
  z-index: 101;
  left: 0;
  top: 80rpx;
  width: 100%;
  background-color: #fff;
  transform: translate(0, -100%);
}

.item-list {
  flex: 1;
  max-height: 620rpx;
  overflow: auto;
}

.row-item {
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
  font-size: 26rpx;
  color: #333;
  padding-right: 10rpx;
  padding-left: 62rpx;
}

.row-item.is-selected {
  color: #198cff;
}

.list-container {
  position: relative;
  width: 100%;
  height: 100%;
}

/*搜索*/
.search-form {
  height: 90rpx;
  display: flex;
  z-index: 102;
  align-items: center;
  background-color: #fff;
}

.form {
  flex: 1;
  position: relative;
  display: flex;
  height: 62rpx;
  align-items: center;
  margin: 0 20px;
  overflow: hidden;
  border-radius: 31rpx;
  background-color: #eff0f1;
}

.form:after {
  content: '';
  position: absolute;
  width: 24rpx;
  height: 25rpx;
  background: url('http://ammgg.com/images/2018/08/21/PrQP.png') no-repeat center;
  background-size: 100% 100%;
  transform: translate(-50%, -50%);
  left: 20px;
  top: 50%;
}

.form-input {
  padding-left: 70rpx;
  font-size: 26rpx;
  width: 100%;
  height: 62rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.input-placeholder {
  color: #808080;
}

/*排序*/
.sort-list-content {
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 102;
  background-color: #fff;
}

.sort-item {
  flex: 1;
  height: 100%;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
}

.goods-title {
  max-width: 180rpx;
}

.icon {
  margin-left: 12rpx;
  width: 14rpx;
  height: 10rpx;
  background: url('http://thyrsi.com/t6/360/1534840881x-1404793423.png') no-repeat center center;
  background-size: 100% 100%;
}

.sort-item.is-selected {
  color: #198cff;
}

.is-selected .icon {
  background-image: url('http://ammgg.com/images/2018/08/21/PjwY.png');
}
