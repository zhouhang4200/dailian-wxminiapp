/* pages/applyArbitration/index.wxss */

.apply-arbitration .module-item {
  margin: 0 30rpx;
  margin-bottom: 36rpx;
  padding-bottom: 45rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.apply-arbitration .module-title {
  display: block;
  font-size: 31rpx;
  padding-bottom: 51rpx;
  color: #333;
}



.apply-arbitration .input {
  width: 690rpx;
  font-size: 27rpx;
  display: block;
  height: 197rpx;
}

.apply-arbitration .img-list{
  display: flex;
  flex-wrap: wrap;
}

.apply-arbitration .screenshot {
  text-align: center;
  width: 221rpx;
  height: 221rpx;
  font-size: 24rpx;
  color: #aaa;
  position: relative;
  background-color: #f0f0f0;
  box-sizing: border-box;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.apply-arbitration .screenshot.is-img {
  line-height: 221rpx;
  font-size: 0;
  vertical-align: middle;
  overflow: hidden;
}

.apply-arbitration .screenshot .img {
   width: 100%;
}

.apply-arbitration .screenshot .title {
  padding-top: 13rpx;
  display: block;
}

.apply-arbitration .screenshot .icon {
  margin: 0 auto;
  width: 81rpx;
  height: 70rpx;
  margin-top: 60rpx;
  background: url('http://thyrsi.com/t6/359/1534671486x-1376440240.png') no-repeat center center;
  background-size: 100% 100%;
}

.apply-arbitration .submit-btn {
    position: fixed;
    border-radius: 0;
    left: 0;
    bottom:0;
  width: 100%;
  height: 87rpx;
  line-height: 87rpx;
  text-align: center;
  font-size: 25rpx;
  color:#fff;
  background-image: linear-gradient(45deg, #009cff 0%, #0086ff 100%),
                      linear-gradient(#198cff, #198cff);
  background-blend-mode: normal, normal;
}
