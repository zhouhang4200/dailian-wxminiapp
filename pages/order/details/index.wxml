        <text class="right"></text>
    </view>
    <view class="row-info">
        <text>效率保证金</text>
        <text class="right"></text>
    </view>
    <view class="row-info">
        <text>代练时间(d)</text>
        <text class="right"></text>
    </view>
    <view class="row-info">
        <text>代练时间(h)</text>
        <text class="right"></text>
    </view>
