/* pages/applyArbitration/index.wxss */

.module-item {
    margin: 0 30rpx;
    margin-bottom: 36rpx;
    padding-bottom: 45rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.top-head-item {
    padding-top: 36rpx;
}

.img-list-wrap {
    margin-left: 0;
}

.img-list-wrap .module-title {
    padding-top: 20rpx;
    margin-left: 30rpx;
}

.module-title {
    display: block;
    font-size: 31rpx;
    padding-bottom: 51rpx;
    color: #333;
}

.input {
    width: 690rpx;
    font-size: 27rpx;
    display: block;
    height: 197rpx;
}

.img-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}

.screenshot-img-wrap {
    width:100%;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    overflow: hidden;
}

.screenshot-img-icon {
    width: 100%;
    vertical-align: middle;
}

.screenshot {
    text-align: center;
    width: 206rpx;
    height: 206rpx;
    font-size: 24rpx;
    color: #aaa;
    position: relative;
    background-color: #f0f0f0;
    box-sizing: border-box;
    margin-left: 30rpx;
    margin-bottom: 10rpx;
}

.del-icon {
    width: 44rpx;
    height: 44rpx;
    position: absolute;
    right: -22rpx;
    top: -22rpx;
}

.img {
    width: 100%;
}

.title {
    padding-top: 13rpx;
    display: block;
}

.icon {
    display: block;
    margin: 0 auto;
    width: 81rpx;
    height: 70rpx;
    margin-top: 60rpx;
}

.submit-btn {
    position: fixed;
    border-radius: 0;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 87rpx;
    line-height: 87rpx;
    text-align: center;
    font-size: 26rpx;
    color: #fff;
    background-image: linear-gradient(45deg, #009cff 0%, #0086ff 100%),
    linear-gradient(#198cff, #198cff);
    background-blend-mode: normal, normal;
}
