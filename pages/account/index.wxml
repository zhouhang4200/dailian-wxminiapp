<!--pages/account/index.wxml-->
<wxs src="../../lib/utils.wxs" module="utils"></wxs>
<block wx:if="{{isLogin===true}}">
    <view class="head-top">
        <navigator class="head-info arrow-right-icon" url="/pages/account/profile/index">
            <view class="user-icon">
                <image src="{{userInfo.avatar}}" mode="scaleToFill" lazy-load="true"></image>
            </view>
            <view class="right">
                <text class="title">{{userInfo.name}}</text>
                <text class="remark">{{userInfo.phone}}</text>
            </view>
        </navigator>
        <view class="money-info">
            <view class="row-item">
                <text class="size">{{ utils.sumPrice([userInfo.balance,userInfo.frozen]) }}</text>
                <text class="remark">账户余额（元）</text>
            </view>
            <view class="row-item">
                <text class="size">{{userInfo.balance}}</text>
                <text class="remark">可用余额（元）</text>
            </view>
            <view class="row-item">
                <text class="size">{{userInfo.frozen}}</text>
                <text class="remark">冻结资金（元）</text>
            </view>
        </view>
    </view>
    <navigator class="link-navigation" url="/pages/account/capital/index">
        <view class="link-bd">
            <view class="left-icon">
                <image src="/images/icon_5.png" mode="scaleToFill" lazy-load="false"></image>
            </view>
            <view class="title">
                <text>资金管理</text>
            </view>
        </view>
    </navigator>
    <navigator class="link-navigation" url="/pages/certification/index">
        <view class="link-bd">
            <view class="left-icon">
                <image src="/images/icon_1.png" mode="scaleToFill" lazy-load="false"></image>
            </view>
            <view class="title">
                <text>成为代练</text>
            </view>
        </view>
    </navigator>
    <navigator class="link-navigation" url="/pages/order/index">
        <view class="link-bd">
            <view class="left-icon">
                <image src="/images/icon_2.png" mode="scaleToFill" lazy-load="false"></image>
            </view>
            <view class="title">
                <text>我的订单</text>
            </view>
        </view>
    </navigator>
    <navigator class="link-navigation" url="/pages/account/setting/index">
        <view class="link-bd">
            <view class="left-icon">
                <image src="/images/icon_3.png" mode="scaleToFill" lazy-load="false"></image>
            </view>
            <view class="title">
                <text>设置</text>
            </view>
        </view>
    </navigator>
    <navigator class="link-navigation" url="/pages/help/index">
        <view class="link-bd">
            <view class="left-icon">
                <image src="/images/icon_4.png" mode="scaleToFill" lazy-load="false"></image>
            </view>
            <view class="title">
                <text>帮助中心</text>
            </view>
        </view>
    </navigator>
    <view bindtap="onLoginOut" class="sign-out-btn">退出登录</view>
</block>
<block wx:if="{{isLogin===false}}">
    <navigator class="head-top arrow-right-icon" url="/pages/account/login/index">
        <view class="head-info">
            <view class="user-icon">
                <image src="/images/U7jX.png" mode="scaleToFill" lazy-load="false"></image>
            </view>
            <view class="right">
                <text class="title">登录/注册</text>
                <text class="remark">登录后可享受更多特权</text>
            </view>
        </view>
    </navigator>
    <navigator class="link-navigation" url="/pages/help/index">
        <view class="link-bd bb-0">
            <view class="left-icon">
                <image src="/images/icon_4.png" mode="scaleToFill" lazy-load="false"></image>
            </view>
            <view class="title">
                <text>帮助中心</text>
            </view>
        </view>
    </navigator>
</block>

