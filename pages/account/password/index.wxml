<!--pages/account/password/index.wxml-->

<!--找回登录密码-->
<form wx:if="{{type==='find_login'}}" bindsubmit="onFindLoginPassword" class="user-account-page password-page">
    <view class="form-item">
        <input placeholder="请输入手机号码" focus="{{true}}" maxlength="11"  bindinput="onPhoneInput" maxlength="11" type="number" name="phone"/>
    </view>
    <view class="form-item">
        <input placeholder="请输入新登录密码" name="new_password" password="{{true}}"/>
    </view>
    <view class="form-item">
        <input placeholder="请再次输入新密码" name="confirm_password" password="{{true}}"/>
    </view>
    <view class="form-item send-wrap">
        <input placeholder="验证码" name="verification_code"/>
        <text bindtap="sendPhoneCode" class="send-btn">{{verificationCode.text}}</text>
    </view>
    <navigator url="/pages/account/password/index?action=find_login" class="forget-pwd  full-item">忘记密码</navigator>
    <view class="form-item full-item bb-0">
        <button formType="submit" class="submit-btn primary">
            <text class="btn-title">确定</text>
        </button>
    </view>
</form>

