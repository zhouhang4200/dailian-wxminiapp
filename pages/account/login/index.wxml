<!--pages/account/api_login/index.wxml-->
<form bindsubmit="onSubmitLogin" class="user-account-page login-page">
    <view class="form-item">
        <input name="phone" placeholder="请输入手机号码" maxlength="11" type="number"/>
    </view>
    <view class="form-item">
        <input name="password" placeholder="请输入登录密码" password="{{true}}"/>
    </view>
    <view class="action-type full-item">
        <label>
            <checkbox style="zoom: 65%" value="记住密码" checked="{{item.checked}}"/>
            <text class="remember">记住密码</text>
        </label>
        <navigator url="" class="forget-pwd">忘记密码</navigator>
    </view>
    <button formType="submit" class="submit-btn primary"><text class="btn-title">登录</text></button>
    <navigator url="/pages/account/register/index"  hover-class="none"> <button class="submit-btn">手机注册</button></navigator>
</form>
