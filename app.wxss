/*link item 专用样式*/

.link-navigation {
    background-color: #fff;
    height: 100rpx;
}

.link-navigation.is-large {
    height: 124rpx;
}

.link-navigation.is-large .icon {
    width: 77rpx;
    height: 77rpx;
}

.link-navigation .link-bd {
    position: relative;
    margin-left: 29rpx;
    display: flex;
    height: 100%;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}

.link-navigation .link-bd:after {
    content: '';
    position: absolute;
    right: 29rpx;
    top: 0;
    height: 100%;
    width: 11rpx;
    background: url('http://ammgg.com/images/2018/08/21/P1Ei.png') no-repeat center center;
    background-size: 100% 26rpx;
}

.link-navigation .icon {
    margin-right: 22rpx;
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

.link-navigation .left-icon {
    margin-right: 22rpx;
}

.link-navigation .title {
    font-size: 29rpx;
    color: #222;
}

.link-navigation .icon.i-notice {
    background-image: url('http://ammgg.com/images/2018/08/21/POF0.png');
}

.link-navigation .icon.i-msg {
    background-image: url('http://ammgg.com/images/2018/08/21/PdsL.png');
}

.link-navigation .icon.i-ask {
    background-image: url('http://ammgg.com/images/2018/08/21/PdsL.png');
}

.link-navigation .total-tag {
    position: absolute;
    right: 71rpx;
    top: 50%;
    margin-top: -17rpx;
    width: 34rpx;
    height: 34rpx;
    line-height: 34rpx;
    border-radius: 17rpx;
    background-color: #ff4c38;
    color: #fff;
    font-weight: bold;
    text-align: center;
    font-size: 22rpx;
}

/* base */
.bb-0 {
    border-bottom: 0 !important;
}

.bl-0 {
    border-left: 0 !important;
}

.is-overlay {
    height: 100%;
    overflow: hidden;
}

.modal-overlay {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    z-index: 50;
    opacity: 0;
}

.modal-content {
    position: absolute;
    z-index: 51;
    width: 508rpx;
    transform: translate(-50%, -50%);
    left: 50%;
    top: 45%;
    background-color: #ffffff;
    border-radius: 7rpx;
    opacity: 0;
}

.modal-bd {
    padding: 50rpx;
    /*font-weight: bold;*/
    line-height: 1.6;
    font-size: 30rpx;
    box-sizing: border-box;
    text-align: center;
    overflow: hidden;
}

.modal-footer {
    border-top: 1px solid #d2d3d5;
    position: relative;
    display: flex;
    height: 92rpx;
    line-height: 92rpx;
    font-size: 30rpx;
    /*font-weight: bold;*/
    color: #000;
}

.modal-footer .line:after {
    content: '';
    right: 0;
    top: 0;
    position: absolute;
    height: 100%;
    width: 1rpx;
    background-color: #d2d3d5;
}

.modal-footer .btn {
    /*border-top: 0.2rpx solid #d2d3d5;*/
    position: relative;
    flex: 1;
    text-align: center;
}

.modal-footer .primary {
    color: #198cff;
}

.ellipsis {
    max-width: 100%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.arrow-right-icon {
    position: relative;
}

.arrow-right-icon:after {
    content: '';
    position: absolute;
    right: 29rpx;
    top: 0;
    height: 100%;
    width: 11rpx;
    background: url('http://ammgg.com/images/2018/08/21/P1Ei.png') no-repeat center center;
    background-size: 100% 26rpx;
}

.img-full-max {
    max-width: 100% !important;
}

.overflow-hidden {
    overflow: hidden !important;
}

.submit-btn-primary {
    margin: 0 28rpx;
    margin-bottom: 21rpx;
    font-size: 29rpx;
    line-height: 88rpx;
    background-color: #198cff;
    color: #fff;
}
